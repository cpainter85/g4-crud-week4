<h1>Events</h1>
<p> <%= link_to "Create new event", new_event_path %></p>
<hr></hr>
<% @events.each do |event| %>
  <p><%= event.date %></p>
  <p><%= event.location %></p>
  <p> <%= event.description %></p>
  <p> <%= link_to 'Show Event details', event_path(event) %></p>
  <p> <%= link_to 'Delete Event', event_path(event), method: :delete, data: {confirm: 'Are you sure you want to delete this event?'}%> </p>
  <hr></hr>
<% end %>
